#include <stdio.h>

struct date {
  output
  Employee Name: John Smith
Employee ID: 1234
Employee Salary: 5000.00
Employee Hire Date: 12/3/2020
int day;
    int month;
    int year;
};

struct employee {
    char name[50];
    int id;
    float salary;
    struct date hire_date;
};

int main() {
    struct employee emp1 = {"John Smith", 1234, 5000.0, {12, 3, 2020}};
    
    printf("Employee Name: %s\n", emp1.name);
    printf("Employee ID: %d\n", emp1.id);
    printf("Employee Salary: %.2f\n", emp1.salary);
    printf("Employee Hire Date: %d/%d/%d\n", emp1.hire_date.day, emp1.hire_date.month, emp1.hire_date.year);
    
    return 0;
}
output
Employee Name: John Smith
Employee ID: 1234
Employee Salary: 5000.00
Employee Hire Date: 12/3/2020
